    "react-helmet-async": "1.3.0",
    "react-router-dom": "^6.8.2",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-slug": "^5.1.0",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-mdx": "^2.3.0",
    "remark-mdx-frontmatter": "^2.1.1",
