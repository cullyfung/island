    "@types/execa": "^2.0.0",
    "@types/fs-extra": "^11.0.1",
    "@types/hast": "^2.3.4",
    "@types/lodash-es": "^4.17.7",
    "@types/mdast": "^3.0.10",
    "@types/node": "^18.11.18",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vitest/ui": "^0.28.5",
