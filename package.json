{
  "name": "island",
  "version": "1.0.0",
  "description": "Vite SSG framework based on island arch",
  "keywords": [
    "vite",
    "ssg"
  ],
  "license": "MIT",
  "author": "cullyfung",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "island": "bin/island.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "src/runtime",
    "src/theme-default",
    "src/shared"
  ],
  "scripts": {
    "build": "tsup && pnpm build:deps",
    "build:deps": "tsx ./scripts/prebundle",
    "dev": "tsup --watch",
    "lint": "eslint --fix --ext .ts,.tsx.js,.jsx ./",
    "prepare": "husky install",
    "prepare:e2e": "tsx scripts/prepare-e2e.ts",
    "preview": "cd build && serve .",
    "release": "tsx ./scripts/release.ts",
    "test:e2e": "playwright test",
    "test:unit": "vitest"
  },
  "lint-staged": {
    "**/*.{.js,.jsx,.ts,.tsx}": [
      "npm run lint"
    ]
  },
